<?xml version="1.0" encoding="utf-8"?><androidx.cardview.widget.CardView    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:card_view="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:id="@+id/basketCardView"    android:layout_width="match_parent"    android:layout_height="251dp"    android:layout_margin="2dp"    app:cardCornerRadius="10dp"    android:layout_marginBottom="5dp"    android:background="#ccc">    <androidx.constraintlayout.widget.ConstraintLayout        android:layout_width="match_parent"        android:layout_height="251dp"        android:orientation="vertical">        <ImageView            android:id="@+id/basketImageID"            android:layout_width="167dp"            android:layout_height="228dp"            card_view:layout_constraintBottom_toBottomOf="parent"            card_view:layout_constraintEnd_toEndOf="parent"            card_view:layout_constraintHorizontal_bias="0.024"            card_view:layout_constraintStart_toStartOf="parent"            card_view:layout_constraintTop_toTopOf="parent"            card_view:layout_constraintVertical_bias="0.478"            tools:ignore="MissingConstraints"></ImageView>        <TextView            android:id="@+id/basketBookNameID"            android:layout_width="173dp"            android:layout_height="77dp"            android:textSize="20dp"            android:textStyle="bold"            card_view:layout_constraintBottom_toBottomOf="parent"            card_view:layout_constraintEnd_toEndOf="parent"            card_view:layout_constraintHorizontal_bias="0.931"            card_view:layout_constraintStart_toStartOf="parent"            card_view:layout_constraintTop_toTopOf="parent"            card_view:layout_constraintVertical_bias="0.143"            tools:ignore="MissingConstraints">        </TextView>        <TextView            android:id="@+id/basketAuthorID"            android:layout_width="173dp"            android:layout_height="77dp"            android:textSize="15dp"            card_view:layout_constraintBottom_toBottomOf="parent"            card_view:layout_constraintEnd_toEndOf="parent"            card_view:layout_constraintHorizontal_bias="0.927"            card_view:layout_constraintStart_toStartOf="parent"            card_view:layout_constraintTop_toTopOf="parent"            card_view:layout_constraintVertical_bias="0.643"            tools:ignore="MissingConstraints">        </TextView>        <TextView            android:id="@+id/basketPriceID"            android:layout_width="110dp"            android:layout_height="40dp"            android:textSize="15dp"            card_view:layout_constraintBottom_toBottomOf="parent"            card_view:layout_constraintEnd_toEndOf="parent"            card_view:layout_constraintHorizontal_bias="0.731"            card_view:layout_constraintStart_toStartOf="parent"            card_view:layout_constraintTop_toTopOf="parent"            card_view:layout_constraintVertical_bias="0.924"            tools:ignore="MissingConstraints" />    </androidx.constraintlayout.widget.ConstraintLayout></androidx.cardview.widget.CardView>